      <form action="{{path('delete_airports')}}" method="POST">
        <div class='span3'>
          <input type="submit" value="Supprimer des aéroports">
        </div>
      </form>
      <form action="{{path('delete_planes')}}" method="POST">
        <div class='span3'>
          <input type="submit" value="Supprimer des avions">
        </div>
      </form>
      <form action="{{path('delete_users')}}" method="POST">
        <div class='span3'>
          <input type="submit" value="Supprimer des utilisateurs">
        </div>
      </form>
    </div>
  </div>
{% endblock %}
