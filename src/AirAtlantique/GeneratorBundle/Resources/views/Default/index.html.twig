{% extends '::base.html.twig' %}
{% block body %}
  <div class='container'>
    <div class='row-fluid'>
      <form action="{{path('generate_flights')}}" method="POST">
        <div class='span3'>
          <input type="submit" value="Générer des vols">
        </div>
      </form>
      <form action="{{path('generate_airports')}}" method="POST">
        <div class='span3'>
          <input type="submit" value="Générer des aéroports">
        </div>
      </form>
      <form action="{{path('generate_planes')}}" method="POST">
        <div class='span3'>
          <input type="submit" value="Générer des avions">
        </div>
      </form>
      <form action="{{path('generate_users')}}" method="POST">
        <div class='span3'>
