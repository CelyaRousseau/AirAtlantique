{% extends '::base.html.twig' %}
  {% block body %}
    <div class='row-fluid span12'>
      <div class="container body validate">
        <div class='span6 validate-form'>         
          <div class='well form-actions span9'>
            {{ form_start(formAnonymous, {'action': path('payment_homepage'), 'method' : 'POST'}) }}
              {{ form_errors(formAnonymous) }}
                {{ form_row(formAnonymous.email) }}
                {{ form_row(formAnonymous.lastName) }}
                {{ form_row(formAnonymous.firstName) }}
                <input type="submit" class='btn btn-primary pull-right' value="Confirmer" />
            {{ form_end(formAnonymous) }}
          </div>
        </div>
       
        <!-- Button to trigger modal -->
        <div class='span6 modalLink'>       
          <h4><a href="#myModal" role="button" class="btn-link" data-toggle="modal">Register now</a>
            or
            <a href="#login" role="button" class="btn-link" data-toggle="modal">Login</a>
          </h4>
        </div>
         

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          {{ app.user.username }}
        {% endif %}

        {% include 'UserBundle:User:subscribe.html.twig' with {formInscription: formInscription} %}
        {% render controller('UserBundle:Security:login') %}
      </div>
    </div>
  </div>
  {% endblock %}


  