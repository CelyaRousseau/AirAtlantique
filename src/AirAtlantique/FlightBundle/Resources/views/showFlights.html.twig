{% extends '::base.html.twig' %}
  {% block title %}
      Liste des vols - {{ parent() }}
  {% endblock %}

  {% block body %}
    <div class="well">
        <h3>Liste des vols disponibles</h3>
        <div class='unlisted'>
            {% for key, flight in flightList %}
              <div>
                <div>
                  {{ flight.flightName }}
                  <p>durée :{{ flight.duration|date("H:i")}} </p>
                  <p>date départ :{{ flight.departureDate|date("m/d/Y H:i") }}</p>
                  <p>date d'arrivée :{{ flight.returnDate|date("m/d/Y H:i") }}</p>
                </div>
                <div>
                  {{ form(forms[key]) }}
                  <a class='btn btn-primary' href="{{ path('Cart_homepage') }}">{{ 'form.search.submit'|trans }}</a>
                </div>
              </div>
              {% else %}
                <p>Désolé il n'y a, pour le moment, aucun vol correspondant à votre recherche.</p>

            {% endfor %}
        </div>
    </div>
  {% endblock %}