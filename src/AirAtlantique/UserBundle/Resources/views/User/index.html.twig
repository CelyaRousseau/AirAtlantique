{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Email</th>
                <th>Enabled</th>
                <th>Lastlogin</th>
                <th>Lastname</th>
                <th>Firstname</th>
