<?php
// src/Sdz/BlogBundle/Form/Flight.php

namespace AirAtlantique\CoreBundle\Form;

use Symfony\Component\Form\AbstractType;
use Symfony\Component\Form\FormBuilderInterface;
use Symfony\Component\OptionsResolver\OptionsResolverInterface;

class Flight extends AbstractType
{
  public function buildForm(FormBuilderInterface $builder, array $options)
  {
    $builder
      ->add('Choices' => array('Aller simple' => 'as', 'Aller-retour' => 'ar'),'required'  => true)),
      ->add('DepartureCity',          'text')
      ->add('DestinationCity',       'text')
      ->add('DepartureDay',     'date')
      ->add('DestinationDay',      'date')
      ->add('TicketNumber', 'text')
      ->add('Subscription', 'entity',array('class' =>'', 'property' =>'name'))
      ->add('Class', 'entity', array('class' =>'', 'property' =>'name'));
  }

  public function setDefaultOptions(OptionsResolverInterface $resolver)
  {
    $resolver->setDefaults(array(
      'data_class' => 'AirAtlantique\CoreBundle\Entity\Flight'
    ));
  }

  public function getName()
  {
    return 'airatlantique_corebundle_flight';
  }
}